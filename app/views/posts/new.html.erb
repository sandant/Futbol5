<b>Make a new Post:</b><br />
<% unless flash[:message].nil? %>
  <b style="color:#CC0000"><%= flash[:message] %></b><br />
<% end %>
<% semantic_form_for @post do |f| %>
  <% f.inputs do %>
    <%= f.input :usuario_id, :as => :numeric, :label => "Created by:" %>
    <%= f.input :title, :label => "Title:" %>
	<%= f.input :content, :label => "Info: " %>
  <% end %>
  <%= f.commit_button %>
<% end %>
<br />
